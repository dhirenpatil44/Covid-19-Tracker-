<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CountryDetail">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Details"
        android:titleTextColor="@color/teal_700"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/dCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/skyBlue"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dContinent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/con"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Population"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/skin"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cases"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Cases"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dActive"
            android:textColor="@color/Yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today Cases"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dTodayCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/Yellow"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today Death"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dTodayDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Death"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critical"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dCritical"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        android:padding="3dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recovered"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dRecover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/green"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20dp"/>


    </RelativeLayout>



</LinearLayout>